<hibernate-mapping default-lazy="false">

    <class name="ecobill.module.base.domain.BusinessPartner" table="BASE_BUSINESS_PARTNER">

        <id name="id" type="long" unsaved-value="-1">
            <column name="ID" not-null="true"/>
            <generator class="native"/>
        </id>

        <property name="companyTitleKey" type="string">
            <column name="COMPANY_TITLE_KEY" not-null="false"/>
        </property>

        <property name="companyName" type="string">
            <column name="COMPANY_NAME" not-null="false"/>
        </property>

        <many-to-one name="person" class="ecobill.module.base.domain.Person" column="PERSON_ID" cascade="save-update"/>

        <many-to-one name="address" class="ecobill.module.base.domain.Address" column="ADDRESS_ID" cascade="save-update"/>

        <many-to-one name="banking" class="ecobill.module.base.domain.Banking" column="BANKING_ID" cascade="save-update"/>

        <set name="deliveryOrders" table="BASE_DELIVERY_ORDER" cascade="all" lazy="true">
            <key column="BUSINESS_PARTNER_ID"/>
            <one-to-many class="ecobill.module.base.domain.DeliveryOrder"/>
        </set>

        <set name="bills" table="BASE_BILL" cascade="all" lazy="true">
            <key column="BUSINESS_PARTNER_ID"/>
            <one-to-many class="ecobill.module.base.domain.Bill"/>
        </set>

    </class>

</hibernate-mapping>
