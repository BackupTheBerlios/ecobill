<hibernate-mapping default-lazy="false">

    <class name="ecobill.module.base.domain.SystemCountry" table="BASE_SYSTEM_COUNTRY">

        <id name="id" type="long" unsaved-value="-1">
            <column name="ID" not-null="true"/>
            <generator class="native"/>
        </id>

        <property name="key" type="string">
            <column name="UNIT_KEY" not-null="true" unique="true"/>
        </property>

        <many-to-one name="systemLanguage" column="SYSTEM_LANGUAGE_ID" class="ecobill.module.base.domain.SystemLanguage" lazy="false"/>

    </class>

</hibernate-mapping>