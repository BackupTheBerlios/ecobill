<hibernate-mapping default-lazy="false">

    <class name="ecobill.module.base.domain.ReduplicatedArticle" table="BASE_REDUPLICATED_ARTICLE">
    
        <id name="id" type="long" unsaved-value="-1">
            <column name="ID" not-null="true"/>
            <generator class="native"/>
        </id>

        <many-to-one name="deliveryOrder" class="ecobill.module.base.domain.DeliveryOrder" column="DELIVERY_ORDER_ID" cascade="save-update"/>

        <property name="amount" type="double">
            <column name="AMOUNT" not-null="true"/>
        </property>

        <property name="price" type="double">
            <column name="PRICE" not-null="true"/>
        </property>

        <property name="description" type="string">
            <column name="DESCRIPTION" not-null="true"/>
        </property>


    </class>

</hibernate-mapping>