<hibernate-mapping default-lazy="false">

    <class name="ecobill.module.base.domain.Article" table="BASE_ARTICLE">

        <id name="id" type="long" unsaved-value="-1">
            <column name="ID" not-null="true"/>
            <generator class="native"/>
        </id>

        <property name="articleNumber" type="string">
            <column name="ARTICLE_NUMBER" not-null="true" unique="true"/>
        </property>

        <property name="unitKey" type="string">
            <column name="UNIT_KEY" not-null="true"/>
        </property>

        <property name="price" type="double">
            <column name="PRICE" not-null="true"/>
        </property>

        <property name="inStock" type="double">
            <column name="IN_STOCK" not-null="true"/>
        </property>

        <property name="bundleCapacity" type="double">
            <column name="BUNDLE_CAPACITY" not-null="false"/>
        </property>

        <property name="bundleUnitKey" type="string">
            <column name="BUNDLE_UNIT_KEY" not-null="false"/>
        </property>

        <set name="descriptions" table="BASE_ARTICLE_DESCRIPTION" cascade="all" sort="ecobill.module.base.hbm.sort.SystemLocaleComparator">
            <key column="ARTICLE_ID"/>
            <one-to-many class="ecobill.module.base.domain.ArticleDescription"/>
        </set>

    </class>

</hibernate-mapping>